<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#576370"
    tools:context="com.sgs.usmansh.schmngsys.MainLoginAct">



    <TextView
        android:id="@+id/main_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:accessibilityLiveRegion="assertive"
        android:gravity="center"
        android:text="Suffah Grammar School\n-------- since 2009 --------"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold" />


    <android.support.design.widget.TextInputLayout
        android:layout_below="@+id/main_label"
        android:layout_marginTop="20dp"
        android:id="@+id/LoginEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:background="#ffffff"
            android:layout_margin="10dp"
            android:hint="Enter Email"
            android:id="@+id/loginEmailF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:padding="15dp"
            android:textSize="20sp"
            android:inputType="textEmailAddress" />


    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="20dp"
        android:id="@+id/LoginPassword"
        android:layout_below="@+id/LoginEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText

            android:background="#ffffff"
            android:layout_margin="10dp"
            android:padding="15dp"
            android:hint="Enter Passsword"
            android:id="@+id/loginPasswordF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:ems="10"
            android:textSize="20sp"
            android:inputType="textPassword" />


    </android.support.design.widget.TextInputLayout>

    <com.github.rubensousa.raiflatbutton.RaiflatButton
        android:id="@+id/loginbtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/LoginPassword"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:background="#7b1fa2"
        android:text="Login"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#ffffff"/>

</RelativeLayout>
