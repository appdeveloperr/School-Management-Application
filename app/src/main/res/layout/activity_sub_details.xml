<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#576370"
    tools:context="com.sgs.usmansh.schmngsys.subDetails">


    <TextView
        android:padding="6dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="#ffffff"
        android:textColor="#263238"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:text="Teacher name : "
        android:id="@+id/subtname"
        android:layout_marginTop="10dp"/>



    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:id="@+id/LL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subtname"
        android:weightSum="2">


        <TextView
            android:padding="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="#ffffff"
            android:textColor="#263238"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Classes"
            android:textSize="20dp"/>



        <TextView
            android:padding="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="#ffffff"
            android:textColor="#263238"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Subjects"
            />



    </LinearLayout>




    <LinearLayout
        android:id="@+id/LL2"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/LL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">




        <LinearLayout
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="8">

            <TextView
                android:textColor="#00e5ff"
                android:padding="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/cl1"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textSize="20dp"
                android:text="1. "
                android:layout_weight="1"
                android:layout_marginTop="5dp"/>

            <TextView
                android:textColor="#00e5ff"
                android:padding="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/cl2"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"

                android:textSize="20dp"
                android:text="2. "
                android:layout_weight="1"/>

            <TextView
                android:textColor="#00e5ff"
                android:padding="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/cl3"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textSize="20dp"
                android:text="3. "
                android:layout_weight="1"/>

            <TextView
                android:textColor="#00e5ff"
                android:padding="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/cl4"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textSize="20dp"
                android:text="4. "
                android:layout_weight="1"/>

            <TextView
                android:textColor="#00e5ff"
                android:padding="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/cl5"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textSize="20dp"
                android:text="5. "
                android:layout_weight="1"/>

            <TextView
                android:textColor="#00e5ff"
                android:padding="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/cl6"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textSize="20dp"
                android:text="6. "
                android:layout_weight="1"/>

            <TextView
                android:textColor="#00e5ff"
                android:padding="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/cl7"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textSize="20dp"
                android:text="7. "
                android:layout_weight="1"/>

            <TextView
                android:textColor="#00e5ff"
                android:padding="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/cl8"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textSize="20dp"
                android:text="8. "
                android:layout_weight="1"/>


        </LinearLayout>





        <!--Second Linear Layout-->


        <LinearLayout
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="8">

            <TextView
                android:id="@+id/sb1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text=""
                android:textColor="#00e5ff"
                android:textSize="20dp" />

            <TextView
                android:textColor="#00e5ff"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/sb2"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text=""
                android:layout_weight="1"/>

            <TextView
                android:textColor="#00e5ff"

                android:id="@+id/sb3"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text=""
                android:layout_weight="1"/>

            <TextView
                android:textColor="#00e5ff"

                android:id="@+id/sb4"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text=""
                android:layout_weight="1"/>

            <TextView
                android:textColor="#00e5ff"
                android:id="@+id/sb5"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text=""
                android:layout_weight="1"/>

            <TextView
                android:textColor="#00e5ff"
                android:id="@+id/sb6"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text=""
                android:layout_weight="1"/>

            <TextView
                android:textColor="#00e5ff"
                android:id="@+id/sb7"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text=""
                android:layout_weight="1"/>

            <TextView
                android:textColor="#00e5ff"
                android:id="@+id/sb8"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text=""
                android:layout_weight="1"/>


        </LinearLayout>



    </LinearLayout>



    <Button
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textColor="#ffffff"
        android:background="#d50000"
        android:layout_below="@+id/LL2"
        android:id="@+id/subbackbt"
        android:text="back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>
