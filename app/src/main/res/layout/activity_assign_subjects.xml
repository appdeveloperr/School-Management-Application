<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#576370"
    tools:context="com.sgs.usmansh.schmngsys.AssignSubjects"
    android:weightSum="2">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Time Table"
                android:textColor="#ffffff"
                android:gravity="center"
                android:id="@+id/timelabel"/>


            <RelativeLayout
                android:layout_below="@+id/timelabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/RL"
                >

                <LinearLayout
                    android:id="@+id/LL1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">


                    <TextView
                        android:textColor="#ffffff"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/spid1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1. "
                        android:textSize="20dp"/>

                    <Spinner
                        android:layout_weight="1.5"
                        android:id="@+id/subSpinner1"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/spid"
                        android:layout_marginLeft="5dp"
                        />


                    <Spinner
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1.5"
                        android:id="@+id/classSpinner1"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/subSpinner"
                        />


                </LinearLayout>



                <LinearLayout
                    android:id="@+id/LL2"
                    android:layout_below="@+id/LL1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">


                    <TextView

                        android:textColor="#ffffff"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/spid2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2. "
                        android:textSize="20dp"/>

                    <Spinner
                        android:layout_weight="1.5"
                        android:id="@+id/subSpinner2"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/spid2"
                        android:layout_marginLeft="5dp"
                        />


                    <Spinner
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1.5"
                        android:id="@+id/classSpinner2"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/subSpinner2"
                        />


                </LinearLayout>




                <LinearLayout
                    android:id="@+id/LL3"
                    android:layout_below="@+id/LL2"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">


                    <TextView

                        android:textColor="#ffffff"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/spid3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3. "
                        android:textSize="20dp"/>

                    <Spinner
                        android:layout_weight="1.5"
                        android:id="@+id/subSpinner3"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/spid3"
                        android:layout_marginLeft="5dp"
                        />


                    <Spinner
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1.5"
                        android:id="@+id/classSpinner3"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/subSpinner3"
                        />


                </LinearLayout>




                <LinearLayout
                    android:id="@+id/LL4"
                    android:layout_below="@+id/LL3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">


                    <TextView

                        android:textColor="#ffffff"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/spid4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4. "
                        android:textSize="20dp"/>

                    <Spinner
                        android:layout_weight="1.5"
                        android:id="@+id/subSpinner4"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/spid4"
                        android:layout_marginLeft="5dp"
                        />


                    <Spinner
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1.5"
                        android:id="@+id/classSpinner4"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/subSpinner4"
                        />


                </LinearLayout>




                <LinearLayout
                    android:id="@+id/LL5"
                    android:layout_below="@+id/LL4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">


                    <TextView

                        android:textColor="#ffffff"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/spid5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5. "
                        android:textSize="20dp"/>

                    <Spinner
                        android:layout_weight="1.5"
                        android:id="@+id/subSpinner5"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/spid5"
                        android:layout_marginLeft="5dp"
                        />


                    <Spinner
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1.5"
                        android:id="@+id/classSpinner5"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/subSpinner5"
                        />


                </LinearLayout>





                <LinearLayout
                    android:id="@+id/LL6"
                    android:layout_below="@+id/LL5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">


                    <TextView

                        android:textColor="#ffffff"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/spid6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6. "
                        android:textSize="20dp"/>

                    <Spinner
                        android:layout_weight="1.5"
                        android:id="@+id/subSpinner6"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/spid6"
                        android:layout_marginLeft="5dp"
                        />


                    <Spinner
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1.5"
                        android:id="@+id/classSpinner6"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/subSpinner6"
                        />


                </LinearLayout>





                <LinearLayout
                    android:id="@+id/LL7"
                    android:layout_below="@+id/LL6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">


                    <TextView

                        android:textColor="#ffffff"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/spid7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7. "
                        android:textSize="20dp"/>

                    <Spinner
                        android:layout_weight="1.5"
                        android:id="@+id/subSpinner7"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/spid7"
                        android:layout_marginLeft="5dp"
                        />


                    <Spinner
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1.5"
                        android:id="@+id/classSpinner7"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/subSpinner7"
                        />


                </LinearLayout>






                <LinearLayout
                    android:id="@+id/LL8"
                    android:layout_below="@+id/LL7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">


                    <TextView

                        android:textColor="#ffffff"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/spid8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8. "
                        android:textSize="20dp"/>

                    <Spinner
                        android:layout_weight="1.5"
                        android:id="@+id/subSpinner8"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/spid8"
                        android:layout_marginLeft="5dp"
                        />


                    <Spinner
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1.5"
                        android:id="@+id/classSpinner8"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/subSpinner8"
                        />


                </LinearLayout>





                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:id="@+id/LL9"
                    android:layout_below="@+id/LL8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5"
                    android:orientation="vertical">

                    <TextView
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textColor="#ffffff"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select Teacher"/>

                    <Spinner
                        android:layout_marginLeft="5dp"
                        android:layout_weight="4"
                        android:id="@+id/TeacherSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"

                        />


                </LinearLayout>


            </RelativeLayout>


            <RelativeLayout
                android:layout_below="@+id/RL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >



                <Button
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:textColor="#ffffff"
                    android:background="#ff5722"
                    android:id="@+id/submitSubject"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="submit"
                    />




                <Button
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:textColor="#ffffff"
                    android:background="#d50000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Cancel"
                    android:id="@+id/CancelassSub"
                    android:layout_below="@+id/submitSubject"/>


            </RelativeLayout>




        </RelativeLayout>

    </ScrollView>






</RelativeLayout>
