<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#576370"
    tools:context="com.sgs.usmansh.schmngsys.noticeBoard">



    <TextView
        android:id="@+id/NB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:text="Notice Board"
        android:layout_centerHorizontal="true"/>

    <Spinner
        android:layout_below="@+id/NB"
        android:layout_margin="10dp"
        android:id="@+id/NB_type"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </Spinner>




    <EditText
        android:layout_below="@+id/NB_type"
        android:textSize="20dp"
        android:id="@+id/notice_et"
        android:layout_margin="8dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:padding="5dp"/>



    <Button
        android:elevation="10dp"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notice_et"
        android:layout_centerHorizontal="true"
        android:text="Submit"
        android:textColor="#ffffff"
        android:background="#7b1fa2"
        android:id="@+id/submitNB"
        android:padding="5dp"/>


    <Button
        android:elevation="10dp"
        android:layout_margin="8dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submitNB"
        android:layout_centerHorizontal="true"
        android:id="@+id/cancelNB"
        android:background="#0277bd"
        android:text="cancel"
        android:textColor="#ffffff"/>



</RelativeLayout>
