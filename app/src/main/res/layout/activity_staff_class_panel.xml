<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#576370"
    tools:context="com.sgs.usmansh.schmngsys.staffClassPanel">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="All Classes"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:id="@+id/allclsslabel"/>


    <RelativeLayout
        android:layout_below="@+id/allclsslabel"
        android:id="@+id/mRL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">




            <LinearLayout
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:background="#283593"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:id="@+id/st_cl1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Class 1  "
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"/>

                <Button
                    android:background="#55FF55"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:id="@+id/st_cl2"
                    android:layout_below="@+id/st_cl1"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Class 2  "
                    android:layout_weight="1"/>

                <Button
                    android:background="#5d4037"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_below="@+id/st_cl2"
                    android:id="@+id/st_cl3"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Class 3  "
                    android:layout_weight="1"/>

                <Button
                    android:background="#ff5722"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_below="@+id/st_cl3"
                    android:id="@+id/st_cl4"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Class 4  "
                    android:layout_weight="1"/>

                <Button
                    android:background="#d50000"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_below="@+id/st_cl4"
                    android:id="@+id/st_cl5"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Class 5  "
                    android:layout_weight="1"/>


            </LinearLayout>



            <LinearLayout
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/ll1"
                android:orientation="vertical">



                <Button
                    android:background="#7F00FF"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:id="@+id/st_cl6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Class 6  "
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"/>

                <Button
                    android:background="#FF2400"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_below="@+id/st_cl6"
                    android:id="@+id/st_cl7"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Class 7  "
                    android:layout_weight="1"/>

                <Button
                    android:background="#1874CD"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_below="@+id/st_cl7"
                    android:id="@+id/st_cl8"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Class 8  "
                    android:layout_weight="1"/>

                <Button
                    android:background="#00e676"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_below="@+id/st_cl8"
                    android:id="@+id/st_cl9"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Class 9  "
                    android:layout_weight="1"/>

                <Button
                    android:background="#283593"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_below="@+id/st_cl9"
                    android:id="@+id/st_cl10"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Class 10"
                    android:layout_weight="1"/>

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>


    <Button

        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/mRL"
        android:id="@+id/des_out"
        android:text="SignOut"
        android:background="#00b0ff"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="20sp"
        />



</RelativeLayout>