<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sgs.usmansh.schmngsys.DeciplinePanel">


    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:background="#626262"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.Toolbar>




    <com.github.rubensousa.raiflatbutton.RaiflatButton
        android:id="@+id/class_list_panel"
        android:layout_below="@+id/my_toolbar"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="All classes"
        android:background="#4C4C4C"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        />





    <Button

        android:id="@+id/menu_decipline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/addUser"
        android:layout_alignParentEnd="true"
        android:background="#626262"
        android:text="Menu" />


</RelativeLayout>
